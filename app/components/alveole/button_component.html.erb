<alv-button class="inline-flex">
  <%= link_to(@href, class: "flex items-center justify-center w-1/2 px-5 py-2 font-medium text-sm transition-colors duration-200 rounded-md w-auto gap-x-2 #{@base_class}") do %>
    <% if @icon %>
      <%= render(@icon) %>
      <span><%= content %></span>
    <% else %>
      <% content %>
    <% end %>
  <% end %>
</alv-button>
